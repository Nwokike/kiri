# Kiri Research Labs Environment Configuration
# Copy to .env and fill in your values

# =============================================================================
# REQUIRED - Core Django Settings
# =============================================================================
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=kiri.ng,www.kiri.ng
SITE_URL=https://kiri.ng

# =============================================================================
# REQUIRED - Email (Brevo/SMTP)
# =============================================================================
EMAIL_HOST=smtp-relay.brevo.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-smtp-key
DEFAULT_FROM_EMAIL=noreply@kiri.ng

# =============================================================================
# REQUIRED - OAuth Providers (for social login)
# =============================================================================
# GitHub
GITHUB_CLIENT_ID=
GITHUB_SECRET=
GITHUB_TOKEN=  # Personal access token for API calls (starring repos, etc.)

# GitLab
GITLAB_CLIENT_ID=
GITLAB_SECRET=

# Bitbucket
BITBUCKET_CLIENT_ID=
BITBUCKET_SECRET=

# HuggingFace
HUGGINGFACE_CLIENT_ID=
HUGGINGFACE_SECRET=

# =============================================================================
# REQUIRED - AI Services (Traffic Controller)
# =============================================================================
GEMINI_API_KEY=  # Primary AI (Gemini 3.0 Flash)
GROQ_API_KEY=    # Fallback AI (Llama 3.3 70B)

# =============================================================================
# REQUIRED - Cloudflare R2 Storage (backups + media)
# =============================================================================
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_ENDPOINT_URL=https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com
R2_BUCKET_NAME=kiri-media
R2_BACKUP_BUCKET_NAME=kiri-backups

# =============================================================================
# REQUIRED - Cloudflare Turnstile (anti-spam)
# =============================================================================
TURNSTILE_SITEKEY=
TURNSTILE_SECRET=

# =============================================================================
# OPTIONAL - Gist Bot (for Traffic Controller)
# =============================================================================
KIRI_BOT_USERNAME=kiri-bot
KIRI_BOT_GITHUB_TOKEN=  # GitHub PAT for creating gists

# =============================================================================
# OPTIONAL - Analytics
# =============================================================================
GOOGLE_ANALYTICS_ID=

