# Kiri Research Labs Environment Configuration
# Copy to .env and fill in your values

# Security - REQUIRED in production
SECRET_KEY=your-secret-key-here
DEBUG=False

# Domain
ALLOWED_HOSTS=kiri.ng,www.kiri.ng
SITE_URL=https://kiri.ng

# Email (Brevo/SMTP)
EMAIL_HOST=smtp-relay.brevo.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-smtp-key
DEFAULT_FROM_EMAIL=noreply@kiri.ng

# GitHub OAuth (for "Join the Grid")
GITHUB_CLIENT_ID=
GITHUB_SECRET=

# Optional: Google Analytics
GOOGLE_ANALYTICS_ID=
